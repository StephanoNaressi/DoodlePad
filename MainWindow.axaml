<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShakyDoodle"
        Width="400" Height="400"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
        x:Class="ShakyDoodle.MainWindow"
        Title="ShakyDoodle">

	<Grid>
		<!-- Grid setup: left = tools, right = canvas -->
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<!-- Toolbar -->
		<StackPanel Grid.Column="0" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Center">
			<Button Content="Clear" Click="OnClearClick" Margin="5" HorizontalAlignment="Center" Background="Transparent" BorderBrush="Black"/>
			<CheckBox Content="Shake?" Margin="5" HorizontalAlignment="Center" IsChecked="true" Checked="OnShake" Unchecked="OnUnshake"/>
			<UniformGrid Columns="3" Margin="5">
				<!-- Sizes -->
				<Button Width="10" Height="10" CornerRadius="20" Background="DarkGoldenrod" Margin="5" Click="OnSizeSmall" BorderBrush="BlanchedAlmond" BorderThickness="2" />
				<Button Width="15" Height="15" CornerRadius="20" Background="DarkGoldenrod" Margin="5" Click="OnSizeMedium" BorderBrush="BlanchedAlmond" BorderThickness="2" />
				<Button Width="20" Height="20" CornerRadius="20" Background="DarkGoldenrod" Margin="5" Click="OnSizeLarge" BorderBrush="BlanchedAlmond" BorderThickness="2" />
			</UniformGrid>
			<UniformGrid Columns="3" Margin="5">
				<!-- Shapes -->
				<Button Width="15" Height="15" CornerRadius="20" Background="DarkSlateBlue" Margin="5" Click="OnBrushRound" BorderBrush="BlanchedAlmond" BorderThickness="2" />
				<Button Width="15" Height="15" Background="DarkSlateBlue" Margin="5" Click="OnBrushSquare" BorderBrush="BlanchedAlmond" BorderThickness="2" />
				<Button Width="10" Height="15" CornerRadius="0" Background="DarkSlateBlue" Margin="5" Click="OnBrushFlat" BorderBrush="BlanchedAlmond" BorderThickness="2" />
			</UniformGrid>
			<!-- Alpha -->
			<TextBlock Text="Alpha" HorizontalAlignment="Center" FontSize="10"/>
			<Slider Minimum="0" Maximum="1" Value="1" ValueChanged="OnAlphaChanged" />



			<!-- Colors -->
			<UniformGrid Columns="2" Rows="4" Margin="5" HorizontalAlignment="Center">
				<Button Background="Black" Click="OnFirstColor" Margin="4" BorderBrush="BlanchedAlmond" BorderThickness="2" />
				<Button Background="Blue" Click="OnSecondColor" Margin="4" BorderBrush="BlanchedAlmond" BorderThickness="2" />
				<Button Background="Red" Click="OnThirdColor" Margin="4" BorderBrush="BlanchedAlmond" BorderThickness="2" />
				<Button Background="White" Click="OnFourthColor" Margin="4" BorderBrush="BlanchedAlmond" BorderThickness="2" />
				<Button Background="Yellow" Click="OnFifthColor" Margin="4" BorderBrush="BlanchedAlmond" BorderThickness="2" />
				<Button Background="GreenYellow" Click="OnSixthColor" Margin="4" BorderBrush="BlanchedAlmond" BorderThickness="2" />
				<Button Background="Purple" Click="OnSeventhColor" Margin="4" BorderBrush="BlanchedAlmond" BorderThickness="2" />
				<Button Background="Pink" Click="OnEighthColor" Margin="4" BorderBrush="BlanchedAlmond" BorderThickness="2" />
			</UniformGrid>
		</StackPanel>

		<!-- Canvas Area -->
		<local:DoodleCanvas Name="doodleCanvas" Grid.Column="1" />
	</Grid>
</Window>
