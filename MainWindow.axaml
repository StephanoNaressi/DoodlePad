<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:ShakyDoodle"
		Width="400" Height="400"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
        x:Class="ShakyDoodle.MainWindow"
        Title="ShakyDoodle">
	<Grid>
		<!--Define how the grid actually looks like-->
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<!--Define the content of the grid-->

		<StackPanel Grid.Column="0" Orientation="Vertical" Margin="10" >
			<Button Content="Clear" Click="OnClearClick" Margin="5"/>
			<!--Colors-->
			<Button Width="50" Background="Black" Click="OnFirstColor" Margin="5"  BorderBrush="BlanchedAlmond" BorderThickness="2"/>
			<Button Width="50" Background="Blue" Click="OnSecondColor" Margin="5"  BorderBrush="BlanchedAlmond" BorderThickness="2"/>
			<Button Width="50" Background="Red" Click="OnThirdColor" Margin="5"  BorderBrush="BlanchedAlmond" BorderThickness="2"/>
			<Button Width="50" Background="White" Click="OnFourthColor" Margin="5"  BorderBrush="BlanchedAlmond" BorderThickness="2"/>
			<!--Sizes-->
			<Button Width="10" Height="10" CornerRadius="20" Background="Black" Margin="5" HorizontalAlignment="Center" Click="OnSizeSmall" BorderBrush="BlanchedAlmond" BorderThickness="2"/>
			<Button Width="15" Height="15" CornerRadius="20" Background="Black" Margin="5" HorizontalAlignment="Center" Click="OnSizeMedium" BorderBrush="BlanchedAlmond" BorderThickness="2"/>
			<Button Width="20" Height="20" CornerRadius="20" Background="Black" Margin="5" HorizontalAlignment="Center" Click="OnSizeLarge"  BorderBrush="BlanchedAlmond" BorderThickness="2"/>
			<!--Alpha-->
			<Slider Minimum="0" Maximum="1" Value="1" ValueChanged="OnAlphaChanged" />
			<!--Shapes-->
			<Button Width="15" Height="15" CornerRadius="20" Background="Black" Margin="5" HorizontalAlignment="Center" Click="OnBrushRound" BorderBrush="BlanchedAlmond" BorderThickness="2"/>
			<Button Width="15" Height="15" Background="Black" Margin="5" HorizontalAlignment="Center" Click="OnBrushSquare" BorderBrush="BlanchedAlmond" BorderThickness="2"/>
			<Button Width="10" Height="15" CornerRadius="0" Background="Black" Margin="5" HorizontalAlignment="Center" Click="OnBrushFlat" BorderBrush="BlanchedAlmond" BorderThickness="2"/>
		</StackPanel>

		<local:DoodleCanvas Name="doodleCanvas" Grid.Column="1"/>



	</Grid>

</Window>
